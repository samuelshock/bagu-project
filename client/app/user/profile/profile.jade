  .col-md-4(ng-switch='option')
    tabset(vertical='true', type='pills')
      tab(ng-repeat='tab in tabs', heading='{{tab.title}}', active='tab.active', disabled='tab.disabled')

    .col-md-8
      .panel.panel-primary(style='height: auto;')
        .panel-heading {{option}}
        .panel-body
          div(ng-switch='option')
            div(ng-switch-when='comentarios')
              select.form-control(ng-repeat='publication in userBagu.publications', ng-click='setSelected(publication)')
                option.form-control
                  h3 {{publication.name}}
              hr
              .alert.alert-info(ng-repeat='comment in selectedpublication.comments')
                p
                  h3
                    | {{comment.person.name}}
                    span(style='float: right;') {{comment.registerDate}}
                h6 {{comment.comment}}
            div(ng-switch-when='notificaciones')
              input.form-control(type='text', value='3')
            div(ng-switch-when='pagos')
              input.form-control(type='text', value='Name')
            div(ng-switch-when='favoritos')
              input.form-control(type='text', value='Name')
            div(ng-switch-when='publicaciones')
            |publicaciones