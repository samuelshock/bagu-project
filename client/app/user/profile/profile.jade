.col-md-12
  .tagui-card-w220-layout
    .header
      .left-header(style='width: 20px')
        .tagui-vertical-align-container
          .tagui-valign-middle
            .tagui-xsmall-person-pic.icon-people
      .right-body
        .tagui-vertical-align-container(style='font-family: sans-serif')
          .tagui-valign-middle.custom-label.tagui-font-semibold
          | Informacion Personal

    .body
      .tagui-form-label(style='font-size: large', ng-hide='isEditing') Nombre: {{user.name}}
      .tagui-form-label(style='font-size: large', ng-hide='!isEditing') Nombre: {{newPersonData.name}}
      input.form-control(type='text', ng-model='newPersonData.name', ng-hide='!isEditing')
      //.tagui-form-spacer
      //.tagui-form-spacer
      //.tagui-form-label Apellido: {{user.
      //input.form-control(type='text', placeholder='Enter your name')
      .tagui-form-spacer
      .tagui-form-label(style='font-size: large', ng-hide='isEditing') Email: {{user.email}}
      .tagui-form-label(style='font-size: large', ng-hide='!isEditing') Email: {{newPersonData.email}}
      input.form-control(type='email', ng-model='newPersonData.email', ng-hide='!isEditing')
      .tagui-form-spacer
      .tagui-form-spacer
      .tagui-form-spacer
      a(ng-click='enableEdit()', ng-hide='isEditing') Editar
      input.tagui-btn.btn(type='button', value='Editar', ng-hide='!isEditing', ng-click='edit()')
      .tagui-form-spacer
      input.tagui-btn.btn(type='button', value='Cancelar', ng-hide='!isEditing', ng-click='cancel()')



