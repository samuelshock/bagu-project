.header-nav
  &.line-border
    border-bottom solid
    border-bottom-width 1.5px
    border-bottom-color white
  .menu-options
    height 100%
    vertical-align middle
  .bagu-title
    color white
    font-size xx-large
    font-family fantasy
    padding-left 20px

.text-option-menu
  padding-right 8px
  padding-left 8px

.menu-options
  &.left-menu
    float left
    margin-left 5px
    border-right 1px solid rgba(255,255,255,0.2)
  &.right-menu
    float right
    border-left 1px solid rgba(255,255,255,0.2)
  &:hover
    opacity 100%
    background-color black
    color #fff
    border-radius 5px

.header
  .search-menu
    height 100%
    margin-left 20%
    float left

.search-menu
  .text-field
    border-color white
    border-style solid none solid solid
    border-radius 5px 0px 0px 5px
    margin-right 0px
    height 25px
    width 250px
  .search-button
    border-radius 0px 5px 5px 0px
    margin-left -7px
    border-color white
    border-style solid solid solid dashed
    border-left-color black
    height 31px

